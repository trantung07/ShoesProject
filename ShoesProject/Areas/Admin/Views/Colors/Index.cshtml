@model IEnumerable<ShoesProject.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var color = "#";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ColorValue)
        </th>
        <th>
            Color
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ColorStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ColorValue)
        </td>
        <td>
            
            <div style="max-width: 100px; height:20px; background-color: #@item.ColorCode"></div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ColorStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ColorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ColorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ColorId })
        </td>
    </tr>
}

</table>
